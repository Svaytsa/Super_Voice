{
  "$id": "https://superapi.supervoice.dev/schemas/chat_request.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ChatCompletionRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["model", "messages"],
  "properties": {
    "model": {
      "type": "string"
    },
    "messages": {
      "type": "array",
      "items": {
        "$ref": "./message.json"
      },
      "minItems": 1
    },
    "temperature": {
      "type": "number",
      "minimum": 0,
      "maximum": 2
    },
    "top_p": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "max_tokens": {
      "type": "integer",
      "minimum": 1
    },
    "stream": {
      "type": "boolean"
    },
    "tools": {
      "type": "array",
      "items": {
        "$ref": "./tool.json"
      }
    },
    "tool_choice": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["none", "auto"]
        },
        {
          "type": "object",
          "required": ["type", "name"],
          "properties": {
            "type": {
              "const": "function"
            },
            "name": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "response_format": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["text", "json_object"]
        },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string"
            },
            "parameters": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "user": {
      "type": "string"
    }
  }
}
